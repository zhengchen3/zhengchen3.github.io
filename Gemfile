# Gemfile for Zheng Research Group site (Jekyll + GitHub Pages)
# If you see "ffi requires ruby version >= 3.0", upgrade Ruby: brew install ruby

source "https://rubygems.org"

# Match GitHub Pages build environment (needs Ruby >= 3.0)
gem "github-pages", group: :jekyll_plugins

# Required for `jekyll serve` on Ruby 3+
gem "webrick", "~> 1.8"
